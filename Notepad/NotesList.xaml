<Window x:Class="Notepad.NotesList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="NotesList" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgNotesList" d:ItemsSource="{d:SampleData ItemCount=5}" Loaded="DataGrid_Loaded"/>
        <Button x:Name="btnCloseList" Content="Close" HorizontalAlignment="Left" Margin="40,380,0,0" VerticalAlignment="Top" Height="35" Width="67" Click="btnCloseList_Click"/>

    </Grid>
</Window>
